{
    "name": "fgilio/agent-skill-foundation",
    "description": "Foundation package for PHP CLI skills: routing, analytics, docs, testing",
    "type": "library",
    "license": "MIT",
    "keywords": ["cli", "laravel-zero", "routing", "skills", "analytics", "agent"],
    "authors": [
        {
            "name": "Franco Gilio"
        }
    ],
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.0",
        "illuminate/support": "^12.0",
        "illuminate/console": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "laravel-zero/framework": "^12.0",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.27"
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse"
    },
    "autoload": {
        "psr-4": {
            "Fgilio\\AgentSkillFoundation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fgilio\\AgentSkillFoundation\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fgilio\\AgentSkillFoundation\\AgentSkillFoundationServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
